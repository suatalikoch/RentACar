@model UserDeleteBindingModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>UserDeleteBindingModel</h4>
    <hr />

    <form asp-controller="UserController" asp-action="DeleteConfirm" method="post">
        <input type="hidden" name="username" value="@Model.UserName" />
