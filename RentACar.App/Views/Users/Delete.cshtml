@model UserDeleteViewModel

@{
    // Set the page title
    ViewData["Title"] = "Delete";
}

<h1 class="mb-3">Delete</h1>

<div class="card">
    <div class="card-body">
        <!-- Confirmation message -->
        <h3>Are you sure you want to delete this user?</h3>
        <hr />
        <!-- Display user information -->
        <h4>@Model.FirstName @Model.LastName (@Model.UserName)</h4>
        <!-- Delete form -->
        <form asp-action="DeleteConfirm" asp-route-username="@Model.UserName">
            <div class="text-center">
                <!-- Delete button -->
                <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
                <!-- Back to list button -->
                <a asp-action="All" class="btn btn-secondary btn-sm">Back to List</a>
            </div>
        </form>
    </div>
</div>
