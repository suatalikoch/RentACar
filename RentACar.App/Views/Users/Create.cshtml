@model UserCreateEditViewModel

@{
    ViewData["Title"] = "Create User";
}

<!-- Page Title -->
<h1 class="text-center mb-3">Create a new user</h1>
<hr />

<!-- Form Section -->
<div class="row justify-content-center">
    <div class="col-md-4">
        <!-- Form Start -->
        <form asp-action="Create">
            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Username Field -->
            <div class="form-floating mb-3">
                <input asp-for="UserName" class="form-control" />
                <label asp-for="UserName" class="form-label">Username</label>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <!-- Email Field -->
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" />
                <label asp-for="Email" class="form-label">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Password Field -->
            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" />
                <label asp-for="Password" class="form-label">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password Field -->
            <div class="form-floating mb-3">
                <input asp-for="ConfirmPassword" class="form-control" />
                <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- First Name Field -->
            <div class="form-floating mb-3">
                <input asp-for="FirstName" class="form-control" />
                <label asp-for="FirstName" class="form-label">First Name</label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <!-- Last Name Field -->
            <div class="form-floating mb-3">
                <input asp-for="LastName" class="form-control" />
                <label asp-for="LastName" class="form-label">Last Name</label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <!-- PIN Field -->
            <div class="form-floating mb-3">
                <input asp-for="PIN" class="form-control" />
                <label asp-for="PIN" class="form-label">PIN</label>
                <span asp-validation-for="PIN" class="text-danger"></span>
            </div>

            <!-- Phone Number Field -->
            <div class="form-floating mb-3">
                <input asp-for="PhoneNumber" class="form-control" />
                <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="text-center mb-3">
                <input type="submit" value="Create" class="btn btn-primary btn-block" />
            </div>
        </form>
        <!-- Form End -->
    </div>
</div>

<!-- Back to List Button -->
<div class="text-center">
    <a asp-action="All" class="btn btn-secondary">Back to List</a>
</div>

<!-- Scripts Section -->
@section Scripts {
    @{
        // Partial for client-side validation scripts
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
