@model CarEditViewModel

@{
    // Setting the title for the page
    ViewData["Title"] = "Edit Car";
}

<h1 class="text-center mb-3">Edit @Model.Brand @Model.Model</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- Form fields for editing car details -->
            <div class="form-floating mb-3">
                <input asp-for="Brand" class="form-control" />
                <label asp-for="Brand" class="form-label">Brand</label>
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Model" class="form-control" />
                <label asp-for="Model" class="form-label">Model</label>
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Year" class="form-control" />
                <label asp-for="Year" class="form-label">Year</label>
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Passenger" class="form-control" />
                <label asp-for="Passenger" class="form-label">Passenger</label>
                <span asp-validation-for="Passenger" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="ImageLink" class="form-control" />
                <label asp-for="ImageLink" class="form-label">ImageLink</label>
                <span asp-validation-for="ImageLink" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Description" class="form-control" />
                <label asp-for="Description" class="form-label">Description</label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="RentPrice" class="form-control" />
                <label asp-for="RentPrice" class="form-label">Rent Price</label>
                <span asp-validation-for="RentPrice" class="text-danger"></span>
            </div>
            <!-- Submit button -->
            <div class="text-center mb-2">
                <input type="submit" value="Save" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

<!-- Link to navigate back to the list of cars -->
<div class="text-center">
    <a asp-action="All" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        // Include validation scripts
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
